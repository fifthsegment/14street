<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_screen_bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Regular_order" >


      <ImageView
          android:id="@+id/main_twitter"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentBottom="true"
          android:layout_centerHorizontal="true"
          android:src="@drawable/twitter_icon" />

      <ImageView
          android:id="@+id/main_order"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_above="@+id/main_twitter"
          android:layout_centerHorizontal="true"
          android:layout_marginBottom="36dp"
          android:src="@drawable/order_now_bt_200" />

      <ImageView
          android:id="@+id/main_gplus"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/main_order"
          android:layout_toLeftOf="@+id/main_twitter"
          android:src="@drawable/gplus_icon" />

      <ImageView
          android:id="@+id/main_fb"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/main_order"
          android:layout_toRightOf="@+id/main_twitter"
          android:src="@drawable/facebook_icon" />
    
</RelativeLayout>